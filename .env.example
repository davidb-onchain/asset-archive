# =============================================================================
# ASSET ARCHIVE PROJECT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
POSTGRES_DB=strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=your_secure_password_here

# Database connection for Strapi
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=${POSTGRES_DB}
DATABASE_USERNAME=${POSTGRES_USER}
DATABASE_PASSWORD=${POSTGRES_PASSWORD}

# =============================================================================
# STRAPI CMS CONFIGURATION
# =============================================================================
# CRITICAL: Generate new secure keys for production using:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# Core Strapi secrets (MUST be changed for production)
APP_KEYS=generate_your_app_keys_here,second_app_key_here
API_TOKEN_SALT=generate_your_api_token_salt_here
ADMIN_JWT_SECRET=generate_your_admin_jwt_secret_here
JWT_SECRET=generate_your_jwt_secret_here
TRANSFER_TOKEN_SALT=generate_your_transfer_token_salt_here
ENCRYPTION_KEY=generate_your_encryption_key_here

# Strapi API Tokens (generate in Strapi admin panel)
FULL_ACCESS_TOKEN=your_full_access_token_here
READ_ONLY_TOKEN=your_read_only_token_here

# Public Strapi URL (accessible by frontend)
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337

# =============================================================================
# FRONTEND APPLICATION CONFIGURATION
# =============================================================================

NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# =============================================================================
# DIGITALOCEAN & TERRAFORM CONFIGURATION
# =============================================================================
# DigitalOcean API credentials
DO_PAT=dop_v1_your_digitalocean_personal_access_token_here
DIGITALOCEAN_TOKEN=${DO_PAT}

# DigitalOcean Project
#DIGITALOCEAN_PROJECT_ID=your_project_id_here

# DigitalOcean Spaces (for Terraform state and backups)
SPACES_NAME=your-spaces-bucket-name
SPACES_ACCESS_KEY_ID=your_spaces_access_key_id_here
SPACES_SECRET_ACCESS_KEY=your_spaces_secret_access_key_here
SPACES_REGION=nyc3
SPACES_BUCKET=your-spaces-bucket-name

# Terraform variables
TF_VAR_do_token=${DO_PAT}
TF_VAR_ssh_public_key_path=~/.ssh/id_rsa.pub
TF_VAR_git_repo_url=https://github.com/your-org/asset-archive.git
TF_VAR_region=nyc3
TF_VAR_droplet_size=s-2vcpu-4gb
TF_VAR_image_tag=${IMAGE_TAG}
TF_VAR_db_password=${POSTGRES_PASSWORD}
TF_VAR_gh_token=${GITHUB_TOKEN}
