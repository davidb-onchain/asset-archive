{
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "title", "unique": true },
    "shortDescription": { "type": "text" },
    "description": { "type": "richtext" },
    "price": { "type": "decimal" },
    "compareAtPrice": { "type": "decimal" },
    "availableForSale": { "type": "boolean", "default": true },
    "publisher": { "type": "relation", "relation": "manyToOne", "target": "api::publisher.publisher", "inversedBy": "products" },
    "categories": { "type": "relation", "relation": "manyToMany", "target": "api::category.category", "inversedBy": "products" },
    "tags": { "type": "json" },
    "images": { "type": "media", "multiple": true },
    "sourceUrls": { "type": "relation", "relation": "manyToMany", "target": "api::source-url.source-url", "mappedBy": "products" },
    "archiveSnapshots": { "type": "relation", "relation": "oneToMany", "target": "api::archive-snapshot.archive-snapshot", "mappedBy": "product" },
    "unityPackages": { "type": "relation", "relation": "oneToMany", "target": "api::unity-package.unity-package", "mappedBy": "product" },
    "status": { "type": "enumeration", "enum": ["draft", "published", "archived"] },
    "visibility": { "type": "enumeration", "enum": ["public", "hidden"] },
    "originalCreatedAt": { "type": "datetime" },
    "originalUpdatedAt": { "type": "datetime" },
    "metadata": { "type": "json" }
  }
}
